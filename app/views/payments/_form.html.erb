<%= form_for [@job, @payment] do |f| %>
  <p><%= f.label :received %>
  <%= f.date_select :received %></p>
  <p><%= f.label :amount, "Amount $" %>
  <%= f.number_field :amount, :class => 'text_field', :step => 0.01 %></p>
  <p><%= f.label :pay_period_start %>
  <%= f.date_select :pay_period_start %></p>
  <p><%= f.label :pay_period_end %>
  <%= f.date_select :pay_period_end %></p>
  <p><%= f.submit :Submit %></p>

<% end %>